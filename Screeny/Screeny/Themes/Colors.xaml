<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryBlack">#302F2F</Color>
    <Color x:Key="PrimaryGrey">#666463</Color>
    
    <LinearGradientBrush x:Key="PrimaryGradient" 
                         StartPoint="0,0" 
                         EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryBlack}" 
                      Offset="0.0"/>
        <GradientStop Color="{StaticResource PrimaryGrey}" 
                      Offset="1.0"/>
        
     

</ResourceDictionary>